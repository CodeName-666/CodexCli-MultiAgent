{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "system_rules",
    "roles",
    "codex",
    "paths",
    "snapshot",
    "agent_output",
    "messages",
    "diff_messages",
    "cli"
  ],
  "properties": {
    "system_rules": {"type": "string"},
    "roles": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "file"],
        "properties": {
          "id": {"type": "string"},
          "file": {"type": "string"}
        }
      }
    },
    "codex": {
      "type": "object",
      "required": ["env_var", "default_cmd"],
      "properties": {
        "env_var": {"type": "string"},
        "default_cmd": {"type": "string"}
      }
    },
    "paths": {"type": "object"},
    "prompt_limits": {"type": "object"},
    "task_limits": {"type": "object"},
    "task_split": {"type": "object"},
    "snapshot": {"type": "object"},
    "agent_output": {"type": "object"},
    "messages": {"type": "object"},
    "diff_messages": {"type": "object"},
    "cli": {"type": "object"}
  }
}
