{
  "cli": {
    "description": "Multi-Agent Orchestrator fuer QA/Test Rollen."
  },
  "final_role_id": "qa_integrator",
  "diff_safety": {
    "allowlist": [
      "config/qa_main.json",
      "config/qa_roles/*"
    ]
  },
  "roles": [
    {
      "id": "test_strategist",
      "file": "qa_roles/test_strategist.json",
      "instances": 1,
      "depends_on": [],
      "expected_sections": [
        "# Teststrategie",
        "- Ziele:",
        "- Scope:",
        "- Testtypen:",
        "- Risiken:",
        "- Plan (max 8 Schritte):"
      ],
      "timeout_sec": 1800,
      "max_prompt_chars": 16000
    },
    {
      "id": "test_author",
      "file": "qa_roles/test_author.json",
      "instances": 1,
      "depends_on": [
        "test_strategist"
      ],
      "expected_sections": [
        "# Tests (Autor)",
        "- Testfaelle:",
        "- Daten/Fixtures:",
        "- Abdeckungsluecken:",
        "- Offene Punkte:",
        "```diff"
      ],
      "apply_diff": true,
      "timeout_sec": 900
    },
    {
      "id": "test_executor",
      "file": "qa_roles/test_executor.json",
      "instances": 1,
      "depends_on": [
        "test_author"
      ],
      "expected_sections": [
        "# Testausfuehrung",
        "- Auszufuehrende Kommandos:",
        "- Erwartete Ergebnisse:",
        "- Beobachtete Risiken:"
      ]
    },
    {
      "id": "bug_triager",
      "file": "qa_roles/bug_triager.json",
      "instances": 1,
      "depends_on": [
        "test_executor"
      ],
      "expected_sections": [
        "# Bug-Triage",
        "- Findings:",
        "- Prioritaet/Schwere:",
        "- Repro Schritte:",
        "- Empfohlene Fixes:"
      ]
    },
    {
      "id": "qa_integrator",
      "file": "qa_roles/qa_integrator.json",
      "instances": 1,
      "depends_on": [
        "test_strategist",
        "test_author",
        "test_executor",
        "bug_triager"
      ],
      "expected_sections": [
        "# Final",
        "- Zusammenfassung:",
        "- Naechste Schritte:"
      ]
    }
  ]
}
