{
  "cli": {
    "description": "Multi-Agent Orchestrator fuer Documentation/Enablement Rollen."
  },
  "final_role_id": "docs_integrator",
  "diff_safety": {
    "allowlist": [
      "config/docs_main.json",
      "config/docs_roles/*"
    ]
  },
  "roles": [
    {
      "id": "tech_writer",
      "file": "docs_roles/tech_writer.json",
      "instances": 1,
      "depends_on": [],
      "expected_sections": [
        "# Dokumentation",
        "- Zielgruppe:",
        "- Inhalt/Struktur:",
        "- Offene Punkte:",
        "```diff"
      ],
      "apply_diff": true,
      "timeout_sec": 900
    },
    {
      "id": "tutorial_builder",
      "file": "docs_roles/tutorial_builder.json",
      "instances": 1,
      "depends_on": [
        "tech_writer"
      ],
      "expected_sections": [
        "# Tutorial",
        "- Ziel:",
        "- Schritte:",
        "- Offene Punkte:",
        "```diff"
      ],
      "apply_diff": true,
      "timeout_sec": 900
    },
    {
      "id": "docs_reviewer",
      "file": "docs_roles/docs_reviewer.json",
      "instances": 1,
      "depends_on": [
        "tutorial_builder"
      ],
      "expected_sections": [
        "# Docs-Review",
        "- Findings:",
        "- Klarheit/Luecken:",
        "- Empfohlene Aenderungen:"
      ]
    },
    {
      "id": "docs_integrator",
      "file": "docs_roles/docs_integrator.json",
      "instances": 1,
      "depends_on": [
        "tech_writer",
        "tutorial_builder",
        "docs_reviewer"
      ],
      "expected_sections": [
        "# Final",
        "- Zusammenfassung:",
        "- Naechste Schritte:"
      ]
    }
  ]
}
