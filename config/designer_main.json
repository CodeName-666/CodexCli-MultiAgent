{
  "cli": {
    "description": "Multi-Agent Orchestrator fuer Design-Rollen (Architect/Implementer/Tester/Reviewer/Integrator)."
  },
  "final_role_id": "ui_integrator",
  "diff_safety": {
    "allowlist": [
      "config/developer_main.json",
      "config/designer_main.json",
      "config/developer_roles/*",
      "config/designer_roles/*"
    ]
  },
  "roles": [
    {
      "id": "ui_architect",
      "file": "designer_roles/ui_architect.json",
      "instances": 1,
      "depends_on": [],
      "timeout_sec": 1800,
      "max_prompt_chars": 16000,
      "expected_sections": [
        "# UI-Architektur",
        "- Ziele:",
        "- Nutzer/Personas:",
        "- Informationsarchitektur:",
        "- UI-Komponenten:",
        "- Interaktionen/Flows:",
        "- Risiken:",
        "- Plan"
      ]
    },
    {
      "id": "ui_designer",
      "file": "designer_roles/ui_designer.json",
      "instances": 1,
      "depends_on": [
        "ui_architect"
      ],
      "expected_sections": [
        "# UI-Design",
        "- Design-Konzept:",
        "- Komponenten/Layout:",
        "- Design-Entscheidungen:",
        "- Offene Punkte:"
      ]
    },
    {
      "id": "ui_implementer",
      "file": "designer_roles/ui_implementer.json",
      "apply_diff": true,
      "instances": 1,
      "depends_on": [
        "ui_designer"
      ],
      "timeout_sec": 900,
      "expected_sections": [
        "# UI-Implementierung",
        "- Dateien neu/aendern (Liste):",
        "- Implementierungs-Entscheidungen:",
        "- Offene Punkte:",
        "```diff"
      ]
    },
    {
      "id": "ui_tester",
      "file": "designer_roles/ui_tester.json",
      "apply_diff": true,
      "instances": 1,
      "depends_on": [
        "ui_implementer"
      ],
      "timeout_sec": 900,
      "expected_sections": [
        "# UI-Tests",
        "- Teststrategie:",
        "- Checkliste (A11y/Responsive/States):",
        "```diff"
      ]
    },
    {
      "id": "ui_reviewer",
      "file": "designer_roles/ui_reviewer.json",
      "apply_diff": true,
      "instances": 1,
      "depends_on": [
        "ui_tester"
      ],
      "timeout_sec": 900,
      "expected_sections": [
        "# UI-Review",
        "- Findings:",
        "- Risiko/Impact:",
        "- Empfohlene Aenderungen:",
        "```diff"
      ]
    },
    {
      "id": "ui_implementer_revision",
      "file": "designer_roles/ui_implementer_revision.json",
      "apply_diff": true,
      "instances": 1,
      "depends_on": [
        "ui_reviewer"
      ],
      "run_if_review_critical": true,
      "expected_sections": [
        "# UI-Implementierung (Revision)",
        "- Dateien neu/aendern (Liste):",
        "- Implementierungs-Entscheidungen:",
        "- Offene Punkte:",
        "```diff"
      ]
    },
    {
      "id": "ui_integrator",
      "file": "designer_roles/ui_integrator.json",
      "instances": 1,
      "depends_on": [
        "ui_architect",
        "ui_designer",
        "ui_implementer",
        "ui_tester",
        "ui_reviewer",
        "ui_implementer_revision"
      ],
      "expected_sections": [
        "# Final",
        "- Zusammenfassung:",
        "- Naechste Schritte:"
      ]
    }
  ]
}
