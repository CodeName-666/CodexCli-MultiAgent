{
  "cli": {
    "description": "Multi-Agent Orchestrator fuer Research/UX Rollen."
  },
  "final_role_id": "research_integrator",
  "diff_safety": {
    "allowlist": [
      "config/research_main.json",
      "config/research_roles/*"
    ]
  },
  "roles": [
    {
      "id": "user_researcher",
      "file": "research_roles/user_researcher.json",
      "instances": 1,
      "depends_on": [],
      "expected_sections": [
        "# User Research",
        "- Ziele:",
        "- Methoden:",
        "- Findings:",
        "- Offene Punkte:"
      ],
      "timeout_sec": 1800,
      "max_prompt_chars": 16000
    },
    {
      "id": "ux_analyst",
      "file": "research_roles/ux_analyst.json",
      "instances": 1,
      "depends_on": [
        "user_researcher"
      ],
      "expected_sections": [
        "# UX-Analyse",
        "- Schmerzpunkte:",
        "- Hypothesen:",
        "- Prioritaeten:",
        "- Offene Punkte:"
      ]
    },
    {
      "id": "a11y_reviewer",
      "file": "research_roles/a11y_reviewer.json",
      "instances": 1,
      "depends_on": [
        "ux_analyst"
      ],
      "expected_sections": [
        "# A11y-Review",
        "- Findings:",
        "- Impact:",
        "- Empfohlene Anpassungen:"
      ]
    },
    {
      "id": "research_integrator",
      "file": "research_roles/research_integrator.json",
      "instances": 1,
      "depends_on": [
        "user_researcher",
        "ux_analyst",
        "a11y_reviewer"
      ],
      "expected_sections": [
        "# Final",
        "- Zusammenfassung:",
        "- Naechste Schritte:"
      ]
    }
  ]
}
